    CMD curl -f http://localhost:8080/health || exit 1

# åˆ›å»ºå¯åŠ¨è„šæœ¬
COPY <<EOF /app/entrypoint.sh
#!/bin/bash
set -e

echo "ğŸš€ å¯åŠ¨é—²é±¼è‡ªåŠ¨å›å¤ç³»ç»Ÿ..."
echo "ğŸ“Š æ•°æ®åº“å°†åœ¨åº”ç”¨å¯åŠ¨æ—¶è‡ªåŠ¨åˆå§‹åŒ–..."
