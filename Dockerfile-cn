#æ›´æ¢ä¸­ç§‘å¤§æº
RUN sed -i 's/deb.debian.org/mirrors.ustc.edu.cn/g' /etc/apt/sources.list.d/debian.sources

# å®‰è£…ç³»ç»Ÿä¾èµ–ï¼ˆåŒ…æ‹¬Playwrightæµè§ˆå™¨ä¾èµ–ï¼‰
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        # åŸºç¡€å·¥å…·
        nodejs \
        npm \
        tzdata \
        curl \
        ca-certificates \
        # å›¾åƒå¤„ç†ä¾èµ–
        libjpeg-dev \
